# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.rst]
indent_size = 2

[*.mk]
indent_style = tab
indent_size = 1

[Makefile]
indent_style = tab
